<br /><br /><br />
<div class="h-100 row text-light parent">
    <div class="col parent">
        <br />
        <div style="width: 80vw;">
            <h1>Search Results</h1>
            <br />
            {{#each theMovie}}
            <div class="card bg-light text-dark text-center mx-auto" style="width: 50em;">
                <div class="card-header">
                    {{ this.title }}
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <img class="card-img-top" src="{{this.poster}}" alt="Poster Image"
                                style="width:50%; height:auto;">
                        </div>
                        <div class="col">
                            <div class="card-body">
                                <p class="card-text">IMdb ID: {{ this.imdb_title_id }}</p>
                                <a href="/browse/view?key={{ this.imdb_title_id }}" class="btn btn-primary">View
                                    Movie</a>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
            <br/>
            {{else}}
            <h3>Sorry bud, can't find what you want :(</h3>
            {{/each}}
        </div>
    </div>